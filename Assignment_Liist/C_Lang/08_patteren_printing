/*
 Date : 14 sept 2024
Write a c program print this pattern
Expected Output : 	***
              			**
              			*
              			**
              			*
*/

#include <stdio.h>

int main() 
{
    for (int i = 3; i > 0; i--) 
    {
        for (int j = 0; j < i; j++)
         {
            printf("*");
            
        }
        printf("\n");
    }

    for (int i = 2; i > 0; i--) 
    {
        for (int j = 0; j < i; j++) 
        {
            printf("*");
        }
        printf("\n");
    }

    return 0;
}


/*
    output :
	***
	**
	*
	**
	*


*/
