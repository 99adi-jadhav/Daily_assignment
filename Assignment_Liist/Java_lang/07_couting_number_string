// Date : 13 sept 2024
// Write a java program to count number in a string 
//Expected Output : String : Aditya Jadhav
//		              Number : 14

package com.adi.DailyAssignment;

import java.util.Scanner;

public class _07_CountNumbersInString 
{

	 public static void main(String[] args)
	 {
	     Scanner scanner = new Scanner(System.in);
	        
	        System.out.print("Enter a string: ");
	        String input = scanner.nextLine();
	        
	        // Count the number of characters
	        int characterCount = input.length();

	        // Display the output
	        System.out.println("Count is: " + characterCount);
	        
	        scanner.close();
	    }
	}

/*
	output :	Enter a string: Aditya Jadhav
				Number of words: 14
*/
